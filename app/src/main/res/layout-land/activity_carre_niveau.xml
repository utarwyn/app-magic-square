<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginVertical="15sp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/titre_choix_niveau"
            android:textSize="30sp"
            android:textColor="#000"
            />

        <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="center"
                android:columnCount="3"
                android:rowCount="3">

            <Button
                    android:id="@+id/btn1_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#44bd32"
                    android:text="1"
                    android:onClick="selectionnerNiveau"
                    />

            <Button
                    android:id="@+id/btn2_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#6cb22e"
                    android:text="2"
                    android:onClick="selectionnerNiveau"
                    />

            <Button
                    android:id="@+id/btn3_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#86a72a"
                    android:text="3"
                    android:onClick="selectionnerNiveau"
                    />

            <Button
                    android:id="@+id/btn4_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#9d9b26"
                    android:text="4"
                    android:onClick="selectionnerNiveau"
                    />

            <Button
                    android:id="@+id/btn5_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#ae8f22"
                    android:text="5"
                    android:onClick="selectionnerNiveau"
                    />

            <Button
                    android:id="@+id/btn6_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#bf801f"
                    android:text="6"
                    android:onClick="selectionnerNiveau"
                    />

            <Button
                    android:id="@+id/btn7_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#ce701c"
                    android:text="7"
                    android:onClick="selectionnerNiveau"
                    />

            <Button
                    android:id="@+id/btn8_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#db5b1a"
                    android:text="8"
                    android:onClick="selectionnerNiveau"
                    />

            <Button
                    android:id="@+id/btn9_level"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:width="150sp"
                    android:textAlignment="center"
                    android:layout_margin="5sp"
                    android:background="#e84118"
                    android:text="9"
                    android:onClick="selectionnerNiveau"
                    />

        </GridLayout>


    </GridLayout>

</LinearLayout>
